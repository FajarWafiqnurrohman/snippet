	},

	"php echo" :{
		"prefix": "phpp",
		"body": "<?=  $$1 ; ?>"
	},
	"for":{
		"prefix": "for",
		"body": "<?php for($$1= $2; $$1 < $3; $$1++){$4} ?>"
	},

	"fort" :{
		"prefix": "fort",
		"body": ["<?php for($$1= $2; $$1 < $3; $$1++) : ?>",
			"$4",
            "<?php endfor; ?>"
		]
	},

	"Foreach":{
		"prefix": "foreach",
		"body": "<?php foreach( $$1 as $$2){$3} ?>"
	},

	"Foreach templating":{
		"prefix": "foreacht",
		"body": ["<?php foreach( $$1 as $$2) : ?>",
			     "$3",
			     "<?php endforeach; ?>"
		]
	},

